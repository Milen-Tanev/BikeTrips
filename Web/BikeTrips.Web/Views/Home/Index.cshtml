@model IEnumerable<BikeTrips.Web.ViewModels.Home.TripViewModel>

@{
    ViewBag.Title = "Coming trips";
}

<div class="jumbotron">
    <h1>Bike Trips</h1>
</div>

<div class="row">
    @if (Model.Count() > 0)
    {
        foreach (var trip in Model)
        {
            <div class="col-md-4">
                <h3>trip.TripName</h3>
                <p>Created by: trip.User.Name</p>
            </div>
        }
    }
    else
    {
        <div class="col-md-4">
            <p>No coming events</p>
        </div>
    }

</div>